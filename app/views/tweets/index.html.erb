<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4">Tweets</h1>
    <p class="lead">
    <table>
      <thead>
        <tr>
          <th>Body</th>
          <th>Tweet</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.body %></td>
            <td><%= tweet.tweet_id %></td>
            <td><%= tweet.user_id %></td>
            <td><%= link_to 'Show', tweet %></td>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

  
</p>
  <a class="btn btn-primary btn-lg", <%= link_to 'New Tweet', new_tweet_path %> </a>
</div>